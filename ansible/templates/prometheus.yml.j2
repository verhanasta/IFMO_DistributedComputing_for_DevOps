global:
  scrape_interval: 15s

scrape_configs:
  # Метрики самого Prometheus
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    static_configs:
      - targets: ['{{ ansible_default_ipv4.address }}:9100']
    labels:
          instance: '{{ inventory_hostname }}'

  - job_name: 'mysql_master'
    static_configs:
      - targets: ['mysql_master_exporter:9104']

  - job_name: 'mysql_replica'
    static_configs:
      - targets: ['mysql_replica_exporter:9104']